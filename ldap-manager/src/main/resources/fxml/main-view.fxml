<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ldapmanager.ui.javafx.MainController"
            prefHeight="800.0" prefWidth="1200.0">

    <top>
        <VBox styleClass="header">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <Label text="LDAP Manager" styleClass="title"/>
            <Label text="Manage and test LDAP connections and users" styleClass="subtitle"/>
        </VBox>
    </top>

    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Connections">
                    <fx:include source="connection-panel.fxml"/>
                </Tab>
                <Tab text="User Search">
                    <fx:include source="user-search-panel.fxml"/>
                </Tab>
                <Tab text="Advanced Testing">
                    <fx:include source="advanced-test-panel.fxml"/>
                </Tab>
                <Tab text="Test Server">
                    <fx:include source="embedded-server-panel.fxml"/>
                </Tab>
            </tabs>
        </TabPane>
    </center>

    <bottom>
        <HBox styleClass="footer" alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <Label fx:id="statusLabel" text="Ready" styleClass="status-label"/>
        </HBox>
    </bottom>

</BorderPane>
