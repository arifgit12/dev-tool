<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      spacing="10" prefWidth="500">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <GridPane hgap="10" vgap="10" styleClass="form-grid">
        <!-- Name -->
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="label-bold"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"
                   promptText="Connection name"/>

        <!-- Host -->
        <Label text="Host:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="label-bold"/>
        <TextField fx:id="hostField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                   promptText="ldap.example.com"/>

        <!-- Port -->
        <Label text="Port:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="label-bold"/>
        <TextField fx:id="portField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                   promptText="389" text="389"/>

        <!-- Base DN -->
        <Label text="Base DN:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="label-bold"/>
        <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <TextField fx:id="baseDnField" HBox.hgrow="ALWAYS"
                       promptText="dc=example,dc=com"/>
            <Button fx:id="convertButton" text="Convert" onAction="#handleConvert"
                    styleClass="button-secondary"/>
        </HBox>

        <!-- Bind Username/DN -->
        <Label text="Bind Username/DN:" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="label-bold"/>
        <TextField fx:id="userDnField" GridPane.columnIndex="1" GridPane.rowIndex="4"
                   promptText="cn=admin,dc=example,dc=com"/>

        <!-- Password -->
        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="5" styleClass="label-bold"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="5"
                       promptText="Password"/>

        <!-- SSL -->
        <Label text="" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <CheckBox fx:id="sslCheckBox" text="Use SSL" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

        <!-- User Search Base -->
        <Label text="User Search Base:" GridPane.columnIndex="0" GridPane.rowIndex="7" styleClass="label-bold"/>
        <TextField fx:id="userSearchBaseField" GridPane.columnIndex="1" GridPane.rowIndex="7"
                   promptText="ou=users,dc=example,dc=com"/>

        <!-- User Search Filter -->
        <Label text="User Search Filter:" GridPane.columnIndex="0" GridPane.rowIndex="8" styleClass="label-bold"/>
        <TextField fx:id="userSearchFilterField" GridPane.columnIndex="1" GridPane.rowIndex="8"
                   promptText="(uid={0})" text="(uid={0})"/>

        <!-- Group Search Base -->
        <Label text="Group Search Base:" GridPane.columnIndex="0" GridPane.rowIndex="9" styleClass="label-bold"/>
        <TextField fx:id="groupSearchBaseField" GridPane.columnIndex="1" GridPane.rowIndex="9"
                   promptText="ou=groups,dc=example,dc=com"/>

        <!-- Group Search Filter -->
        <Label text="Group Search Filter:" GridPane.columnIndex="0" GridPane.rowIndex="10" styleClass="label-bold"/>
        <TextField fx:id="groupSearchFilterField" GridPane.columnIndex="1" GridPane.rowIndex="10"
                   promptText="(member={0})" text="(member={0})"/>

        <columnConstraints>
            <ColumnConstraints minWidth="150" prefWidth="150"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
    </GridPane>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <padding>
            <Insets top="10"/>
        </padding>
        <Button fx:id="saveButton" text="Save" onAction="#handleSave" styleClass="button-success"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" styleClass="button-secondary"/>
    </HBox>

</VBox>
